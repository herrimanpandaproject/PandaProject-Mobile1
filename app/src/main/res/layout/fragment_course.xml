<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/fragmentCourse"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="top"
              android:background="@color/white">

    <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="59dp" android:id="@+id/textView3"/>
    <TextView
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="30dp" android:id="@+id/courseTextView"
            android:gravity="top" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Course Name"/>
    <TextView
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="30dp" android:id="@+id/courseDescriptionView"
            android:gravity="top" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Course Description"/>
    <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/courseDisplay"/>


</LinearLayout>